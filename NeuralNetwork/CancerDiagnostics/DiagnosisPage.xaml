        <Rectangle x:Name="b6" Height="32.566" Margin="174,400,1094,0" Grid.Row="1" Stroke="#FF2F2F2F" VerticalAlignment="Top" Fill="Black" StrokeThickness="7" RenderTransformOrigin="0.5,0.5" UseLayoutRounding="False" d:LayoutRounding="Auto"/>
        <TextBlock x:Name="n6" HorizontalAlignment="Left" Height="15" Margin="180,409,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="85" TextAlignment="Center" Text= ""/>
        <Rectangle x:Name="b7" Height="32.566" Margin="174,440,1094,0" Grid.Row="1" Stroke="#FF2F2F2F" VerticalAlignment="Top" Fill="Black" StrokeThickness="7" RenderTransformOrigin="0.5,0.5" UseLayoutRounding="False" d:LayoutRounding="Auto"/>
