        </TextBlock>
        <Rectangle x:Name="b1" Height="32.566" Margin="74,400,1194,0" Grid.Row="1" Stroke="#FF2F2F2F" VerticalAlignment="Top" Fill="Black" StrokeThickness="7" RenderTransformOrigin="0.5,0.5" UseLayoutRounding="False" d:LayoutRounding="Auto"/>
        <TextBlock x:Name="n1" HorizontalAlignment="Left" Height="15" Margin="80,409,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="85" TextAlignment="Center" Text= ""/>
